<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.neterbox.Playvideo_page">

<VideoView
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:clickable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">
        <LinearLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:orientation="horizontal">

     <ImageView
         android:layout_width="@dimen/_25sdp"
         android:layout_height="wrap_content"
         android:src="@drawable/like" />

        <TextView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:text="2900000"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_10sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_40sdp">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/dilike" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="299"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/playcomment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textSize="@dimen/_8sdp"/>

        </LinearLayout>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_7sdp"
    android:src="@drawable/playdot"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:background="#545B5F"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:background="#545B5F"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lifestyle"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="@dimen/_15sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

           <ImageView
               android:layout_width="@dimen/_30sdp"
               android:layout_height="@dimen/_10sdp"
               android:src="@drawable/subscribe"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="79991 Subscribers"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:textSize="@dimen/_7sdp"/>
        </LinearLayout>
</LinearLayout>
<LinearLayout
    android:layout_width="@dimen/_90sdp"
    android:layout_height="@dimen/_25sdp"
    android:layout_gravity="center"
    android:padding="@dimen/_3sdp"
    android:layout_marginLeft="@dimen/_70sdp"
    android:background="@drawable/loginbluebox"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="match_parent"
        android:src="@drawable/subscribe"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscribe"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_3sdp"
        android:textSize="@dimen/_10sdp"
        />
</LinearLayout>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/playvideo_listview"
        android:padding="@dimen/_3sdp">
    </ListView>
</LinearLayout>
