<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/listview_profile"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:gravity="left"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/img1"
        app:civ_border_width="5dp"
        app:civ_border_color="#fff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_3sdp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tlistview_name"
    android:layout_gravity="center"
    android:text="Jane Wilson"
    android:textSize="@dimen/_13sdp"
    android:textStyle="bold"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_2sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_height="@dimen/_8sdp"
                android:src="@drawable/profileeye"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tlistview_seen"
                android:layout_marginLeft="@dimen/_3sdp"
                android:textSize="@dimen/_9sdp"
                android:text="20" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/_17sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_height="@dimen/_8sdp"
            android:src="@drawable/profiletimer"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tlistview_time"
            android:layout_marginLeft="@dimen/_3sdp"
            android:textSize="@dimen/_10sdp"
            android:text="11:30 AM" />
    </LinearLayout>
</LinearLayout>

    </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tlistview_cap"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Go where you are celebrated not where you are tolerated.Go where you are celebrated not where you are tolerated."
        android:textSize="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:id="@+id/ilistview_pic"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/_3sdp"
        android:src="@drawable/profilpicture"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp">
        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/llistview_comment"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/profilecomment">
       <TextView
           android:layout_width="@dimen/_55sdp"
           android:layout_height="wrap_content"
           android:text="Comments"
           android:id="@+id/tlistview_comment"
           android:layout_marginLeft="@dimen/_15sdp"
           android:layout_gravity="center"
           android:textSize="@dimen/_10sdp"/>
            <TextView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:text="(12)"
                android:id="@+id/tlistview_commentno"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center"
            android:id="@+id/llistview_likes"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/profilecomment">
            <TextView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:text="36 Likes"
                android:id="@+id/tlistview_likes"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"/>

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:id="@+id/ilistview_likes"
                android:layout_height="wrap_content"
                android:src="@drawable/heart" />

                   </LinearLayout>
    </LinearLayout>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/_1sdp"-->
        <!--android:background="#f8f8f8"-->
        <!--android:layout_marginTop="@dimen/_15sdp"></View>-->
</LinearLayout>