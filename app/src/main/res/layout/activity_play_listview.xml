<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.neterbox.PlayListview">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:gravity="center"
     android:padding="@dimen/_3sdp"
     android:id="@+id/lplaylist"
     android:orientation="horizontal">

   <ImageView
       android:layout_width="@dimen/_20sdp"
       android:gravity="center"
       android:layout_height="@dimen/_15sdp"
       android:id="@+id/iplaylist"
       android:src="@drawable/playlistsearch" />
<EditText
    android:layout_width="@dimen/_100sdp"
    android:layout_height="wrap_content"
    android:hint="Search Channels"
    android:gravity="center"
    android:id="@+id/eplaylist"
    android:background="@android:color/transparent"
    android:textSize="@dimen/_10sdp"/>
</LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_weight="1"
        android:id="@+id/playlist_view">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#0095ff">

            <ImageView
                android:id="@+id/ichat"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                android:src="@drawable/chat" />

            <ImageView
                android:id="@+id/icircle"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                android:src="@drawable/circle" />

            <ImageView
                android:id="@+id/iplay"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                android:src="@drawable/subscribe" />

        </LinearLayout>
</LinearLayout>



</LinearLayout>