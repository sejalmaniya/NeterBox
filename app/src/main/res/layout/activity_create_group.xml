<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatbg1"
    android:orientation="vertical"
    tools:context="com.neterbox.Create_group">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/_20sdp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:src="@drawable/camerayellow"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_height="wrap_content">

<EditText
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:textColorHint="#049BE6"
    android:layout_gravity="center"
    android:textSize="@dimen/_15sdp"
    android:background="@android:color/transparent"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:hint="Group Name :"/>

        <View
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="#049BE6">

        </View>
</LinearLayout>
    </LinearLayout>

<LinearLayout
    android:layout_width="@dimen/_150sdp"
    android:layout_height="@dimen/_30sdp"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:background="@drawable/whiteblankbox">

<ImageView
    android:layout_width="@dimen/_30sdp"
    android:layout_height="@dimen/_30sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:src="@drawable/addmember" />
<TextView
    android:layout_width="@dimen/_100sdp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:text="Add Friends"
    android:textColor="#049BE6"
    android:textSize="@dimen/_15sdp"
    android:layout_gravity="center"
    />
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#060606">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_5sdp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_12sdp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ifriendprofile"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/pic1"
            app:civ_border_color="#000000" />

            <TextView
                android:id="@+id/titem3"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:text="Charmis Mehta"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="#000000" />

        <ImageView
            android:id="@+id/friendback"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:src="@drawable/arrow" />
    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#9c9898">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:paddingLeft="@dimen/_12sdp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ifriendprofile1"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/pic3"
            app:civ_border_color="#000000" />

        <TextView
            android:id="@+id/titem4"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="Sejal maniya"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/friendback1"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:src="@drawable/arrow" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#9c9898">

    </View>
</LinearLayout>


