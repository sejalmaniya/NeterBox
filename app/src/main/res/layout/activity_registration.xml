<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.neterbox.Registration"
    android:background="@drawable/registrationbg"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_20sdp"
    android:text="Tell us about yourself"
    android:textSize="@dimen/_15sdp"
    android:layout_marginBottom="@dimen/_15sdp"
    android:textColor="#ffffff"
    android:textStyle="bold"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:src="@drawable/registrationuser" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
           android:layout_marginLeft="@dimen/_3sdp"
            android:id="@+id/register_efname"
            android:inputType="text"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:textColorHint="#fff"
            />
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/_1sdp"
    android:background="#ffffff"
    android:layout_marginTop="@dimen/_2sdp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:src="@drawable/registrationuser" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:hint="Last Name"
            android:inputType="text"
            android:id="@+id/register_elname"
            android:textColorHint="#fff" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/_2sdp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:src="@drawable/registrationdob" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Birthdate"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="#fff"
            android:textSize="@dimen/_13sdp"
            android:background="@android:color/transparent"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1"
                android:padding="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:orientation="horizontal"
                android:background="@drawable/registerblankbox">

                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:text="Day"
                    android:textSize="@dimen/_7sdp"
                    android:gravity="center"
                    android:id="@+id/register_eday"
                    android:inputType="datetime"
                    android:background="@android:color/transparent"
                    android:textColor="#fff"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_5sdp"
                    android:id="@+id/register_iday"
                    android:layout_gravity="center"
                    android:src="@drawable/registrationdobdown" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_4sdp"
                android:padding="@dimen/_2sdp"
                android:orientation="horizontal"
                android:background="@drawable/registerblankbox">

                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:text="month"
                    android:textSize="@dimen/_7sdp"
                    android:gravity="center"
                    android:inputType="datetime"
                    android:id="@+id/register_emonth"
                    android:background="@android:color/transparent"
                    android:textColor="#fff"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_5sdp"
                    android:id="@+id/register_imonth"
                    android:layout_gravity="center"
                    android:src="@drawable/registrationdobdown" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_4sdp"
                android:padding="@dimen/_2sdp"
                android:orientation="horizontal"
                android:background="@drawable/registerblankbox">

                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:text="year"
                    android:inputType="datetime"
                    android:textSize="@dimen/_7sdp"
                    android:gravity="center"
                    android:id="@+id/register_eyear"
                    android:background="@android:color/transparent"
                    android:textColor="#fff"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_4sdp"
                    android:id="@+id/register_iyear"
                    android:layout_gravity="center"
                    android:src="@drawable/registrationdobdown" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:src="@drawable/registrationmail" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_eemail"
            android:layout_marginLeft="@dimen/_3sdp"
            android:hint="Your Email"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:background="@android:color/transparent"
            android:textColorHint="#fff"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/_2sdp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:src="@drawable/registrationkey" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:inputType="numberPassword"
            android:hint="Your Password"
            android:id="@+id/register_epassword"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_3sdp"
            android:background="@android:color/transparent"
            android:textColorHint="#fff"
            />
      <ImageView
          android:layout_width="@dimen/_20sdp"
          android:layout_height="@dimen/_10sdp"
          android:layout_gravity="center"
          android:src="@drawable/registrationpasseye"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/_2sdp"></View>

    <Button
        android:id="@+id/btnRegistration"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/loginbluebox"
        android:layout_marginTop="@dimen/_50sdp"
        android:text="Sign Up"
        android:textColor="#fff"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
