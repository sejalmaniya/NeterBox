<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/lplaygrid_item"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <ImageView
            android:id="@+id/iplaygrid_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/pic1"
            android:scaleType="centerCrop"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/lplaygrid_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5da3ed"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tplaygrid_text"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:text="Travel Time"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp">

                <ImageView
                    android:id="@+id/iplaygrid_text"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/login" />

                <TextView
                    android:id="@+id/tplaygrid_subtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="334 sucscibers"
                    android:textColor="#fff"
                    android:textSize="@dimen/_6sdp" />

            </LinearLayout>
    </LinearLayout>
</LinearLayout>
